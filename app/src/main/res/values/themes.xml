<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Customized application theme. -->
    <style name="Theme.TaxiDodger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cat_orange</item>
        <item name="colorPrimaryVariant">@color/cat_orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/taxi_yellow</item>
        <item name="colorSecondaryVariant">@color/taxi_yellow_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/taxi_window_blue</item>
        <item name="android:windowBackground">@color/text_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerItemStyle</item>
    </style>
    <!-- Custom spinner style. -->
    <style name="spinnerItemStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/press_start</item>
        <item name="android:textColor">@color/cat_orange</item>
    </style>
</resources>